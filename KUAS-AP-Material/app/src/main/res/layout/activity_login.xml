<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/app_bg"
	android:gravity="center_horizontal"
	android:orientation="vertical"
	tools:context=".LoginActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:gravity="center_horizontal"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/imageView_kuasap"
			android:layout_width="250dp"
			android:layout_height="wrap_content"
			android:src="@drawable/kuasap_text"/>

		<android.support.design.widget.TextInputLayout
			android:layout_width="250dp"
			android:layout_height="wrap_content">

			<EditText
				android:id="@+id/editText_id"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:imeOptions="actionGo"
				android:inputType="number"
				android:maxLength="10"
				android:singleLine="true"
				android:textSize="@dimen/text_title"/>
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="250dp"
			android:layout_height="wrap_content">

			<EditText
				android:id="@+id/editText_password"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:imeOptions="actionGo"
				android:inputType="textPassword"
				android:textSize="@dimen/text_title"/>
		</android.support.design.widget.TextInputLayout>

		<Button
			android:id="@+id/button_login"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_small"
			android:background="@drawable/button_login"
			android:minWidth="250dp"
			android:text="@string/login"
			android:textColor="@color/white_text"
			android:textSize="@dimen/text_subhead"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="250dp">

			<CheckBox
				android:id="@+id/checkbox_remember"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:checked="true"
				android:text="@string/remember_password"
				android:textColor="@color/black_text"/>

			<TextView
				android:id="@+id/textView_version"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="0"
				android:text="@string/version"
				android:textColor="@color/black_text"/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:layout_weight="0"
		android:gravity="center"
		android:padding="@dimen/margin_small">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical"
			android:paddingBottom="@dimen/margin_small">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/dot_ap"
				android:textColor="@color/black_text"
				android:textSize="@dimen/text_caption"/>

			<ImageView
				android:id="@+id/dot_ap"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/margin_small"
				android:src="@drawable/dot_red"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/margin_large"
			android:gravity="center"
			android:orientation="vertical"
			android:paddingBottom="@dimen/margin_small">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/dot_leave"
				android:textColor="@color/black_text"
				android:textSize="@dimen/text_caption"/>

			<ImageView
				android:id="@+id/dot_leave"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/margin_small"
				android:src="@drawable/dot_red"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/margin_large"
			android:gravity="center"
			android:orientation="vertical"
			android:paddingBottom="@dimen/margin_small">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/dot_bus"
				android:textColor="@color/black_text"
				android:textSize="@dimen/text_caption"/>

			<ImageView
				android:id="@+id/dot_bus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/margin_small"
				android:src="@drawable/dot_red"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>

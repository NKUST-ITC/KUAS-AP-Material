<FrameLayout
	android:id="@+id/layout_user"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:animateLayoutChanges="true"
	android:focusable="true"
	android:foreground="?selectableItemBackground">

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		android:src="@drawable/kuasap3"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="bottom"
		android:orientation="vertical"
		android:paddingLeft="@dimen/margin_medium">

		<ImageView
			android:id="@+id/imageView_user"
			android:layout_width="@dimen/head_mycard"
			android:layout_height="@dimen/head_mycard"
			android:layout_marginBottom="@dimen/margin_medium"
			android:scaleType="centerCrop"
			android:src="@drawable/ic_account_circle_white_48dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_small"
			android:gravity="center_vertical"
			android:orientation="vertical">

			<TextView
				android:id="@+id/textView_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:text="@string/guest"
				android:textColor="@color/white"
				android:textSize="@dimen/text_action"/>

			<TextView
				android:id="@+id/textView_schoolID"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="2dp"
				android:gravity="center_vertical"
				android:text="@string/tap_here_to_login"
				android:textColor="@color/white_text_secondary"
				android:textSize="@dimen/text_action"/>
		</LinearLayout>
	</LinearLayout>
</FrameLayout>